<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/cost_of_service"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Cost of meal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How was the meal?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cost_of_service"
        android:id="@+id/question"/>
    <RadioGroup
        android:id="@+id/tip_options"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question"
        android:checkedButton="@id/excellent_service">
        <RadioButton
            android:id="@+id/good_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/good_service"
            />
        <RadioButton
            android:id="@+id/great_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/great_service"
            />
        <RadioButton
            android:id="@+id/excellent_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/excellent_service"
            />
    </RadioGroup>
        <Switch
            android:id="@+id/rounding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tip_options"
            android:text="@string/round_up_tip"
            android:checked="true"/>
    <Button
        android:id="@+id/calculate_tip"
        android:text="@string/calculate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rounding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/calculate_tip"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Tip Amount: $10"
        />
</androidx.constraintlayout.widget.ConstraintLayout>